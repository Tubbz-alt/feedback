<% content_for :title, "Freedom Of Information | Feedback | GOV.UK" %>
<% content_for :heading, "Freedom Of Information" %>

<form action="/foi" method="post">
  <%= render "shared/user_details_fieldset" %>

  <section id="info">
  <div>Blurb about FOI requests- only relate to GOV.UK, etc.</div>
  </section>
  <section id="zendesk">
  <fieldset>
    <legend>Please specify</legend>
    <label for="foi" class="top">Provide a detailed description about the information you're seeking</label>
    <span class="info">Please don't include any personal or financial information</span>
    <input type="text" maxlength="1200" name="lookingfor" id="lookingfor" required aria-required="true"
           value="<%= @old ? @old[:foi]  : '' %>" />
    <%= render :partial => "shared/form_errors",  :locals => {:fieldname => "foi"}%>

  </fieldset>
  </section>
  <input type="submit" class="button"/>
</form>
