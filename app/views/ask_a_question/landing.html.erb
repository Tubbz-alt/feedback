<% content_for :title, "Ask a Question | Help | GOV.UK Beta (Test)" %>


<form action="/ask-a-question" method="post">
  <% if @errors && (not @errors.empty?) %>
    <div id="error_explanation">
      <h2><%= pluralize(@errors.count, "error") %> prohibited this post from being saved:</h2>
      <ul>
        <% @errors.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <section id="userdetails">
    <fieldset>
      <legend>Your details</legend>
      <label for="name">Name</label>
      <input type="text" name="name" id="name" required aria-required="true"/>
      <label for="email">Email</label>
      <input type="email" name="email" id="email" required aria-required="true"/>
      <label for="verify-email">Verify Email</label>
      <input type="email" name="verifyemail" id="verify-email" required aria-required="true"/>
    </fieldset>
  </section>

  <section id="zendesk">
    <fieldset>
      <label for="question">What can we help you with?</label>
      <span>Please don't include any personal or financial information</span>
      <input type="text" name="question" id="question" required aria-required="true"/>
      <label for="section">Is there a section where you'd expect to find an answer?</label>
      <select name="section" id="section">
        <% @departments.each do |key, value| %>
          <option value="<%= value %>"><%= key %></option>
        <% end %>
      </select>
      <label>Please list any search terms you used to help us improve GOV.UK.</label>
      <span>Please don't include any personal or financial information</span>
      <input type="text" name="searchterms"/>
    </fieldset>
  </section>
  <input type="submit"/>
</form>
